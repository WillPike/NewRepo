- platform = platform || 'web';
- libsPath = libs || '/bower_components/';
- snapPath = snap || '/';
- bower = bower || settings.bower;
- getLib = function(path, quote) { path = libsPath + path; if (quote) { path = "'" + path + "'"; } return path; }
- getSnap = function(path, quote) { path = snapPath + path; if (quote) { path = "'" + path + "'"; } return path; }

doctype html
html
  head
    meta(charset="utf-8")
    meta(http-equiv="Content-Security-Policy",content="default-src *; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline' 'unsafe-eval'")
    meta(name='viewport',content='width=1920, user-scalable=no')
    meta(name="format-detection", content="telephone=no")
    meta(name="msapplication-tap-highlight", content="no")
    if platform === 'mobile'
      script(src='cordova.js')
    script(src=getLib('dependencies.js'))
    script(src=getSnap('dist/js/snap.js'))
    script(src='application.js')
    block head
  body
    block body
